@using KelurahanSentani.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="page login-page">
        <div class="container">
            <div class="form-outer text-center  align-items-center">
                <div class="form-inner">
                    <p>
                        <div class="logo text-uppercase"><span></span><strong class="text-primary">SISTEM INFORMASI</strong></div>
                    </p>
                    <p>
                        <div class="logo text-uppercase"><span></span><strong class="text-primary">KELURAHAN</strong></div>
                    </p>
                    <p></p>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "label-custom" })
                            @Html.TextBoxFor(m => m.Email)
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "label-custom" })
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 form-control-label">@Html.CheckBoxFor(m => m.RememberMe)</label>
                            <div class="col-sm-1">
                                <label class="checkbox-inline">
                                    Remember
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-info" type="submit">Login</button>
                            <button class="btn btn-info" type="reset">Reset</button>
                        </div>
                        <div class="form-group">
                            <a href="/account/ForgotPassword" class="forgot-pass">Forgot Password?</a>
                        </div>

                    }
                  
                    
                </div>
                <div class="copyrights text-center">
                    <p>Design by <a href="https://bootstrapious.com" class="external">Bootstrapious</a></p>
                    <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)-->
                </div>
            </div>
        </div>
    </div>
  
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}